@model IEnumerable<BlogTrackerProject.Models.Bloginfo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutBlog.cshtml";
}

<h1>Blog List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

@foreach (var item in Model)
{
    <tr>
        <div class="card" style="width: 25rem;">
            <div class="card-body">
                <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Title) </h5>
                <p class="card-text"> Date: @Html.DisplayFor(modelItem => item.DateOfCreation)</p>
                <p class="card-text">Subject: @Html.DisplayFor(modelItem => item.Subject)</p>
                <a href="#" class="btn btn-primary">  @Html.DisplayFor(modelItem => item.Blogurl)</a><br><br>
                <a asp-action="Edit" class="btn btn-primary"  asp-route-id="@item.Blogid">Edit</a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Blogid">Delete</a>

            </div>
        </div>
    </tr>
}




   
